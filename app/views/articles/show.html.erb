<article class="detail-article">
  <h1 class="article-detail-title"> <%= @article.title %></h1>
  
  <div class="glyphicon glyphicon-calender" id="article-date">
    <%= @article.created_at.strftime("%b %d %Y") %>
    
  <div class="article-body">
    <%= @article.body %>
  </div>
<% if user_signed_in? && current_user == @article.user %>
  <div class="edit-delete">
  <%= link_to "Edit Article", edit_article_path(@article), 
                              class: "btn btn-primary btn-lg "%>
  <%= link_to "Delete Article", article_path(@article), method: :delete,
      data: {confirm: "Are you sure you want to delete aticle?"},
      class: "btn btn-primary btn-md btn-space" %>                    
  </div>
<% end %>
</article>
<hr>
<div class="col-md-12">
  <%= form_for [@article,@comment],
  :html => {class: "form-horizontal", role: "form"} do |f| %>
    <% if @comment.errors.any? %>
      <div class="panel panel-danger col-md-offset-1">
        <div class="panel-heading">
            <h2 class-'panel-title'>
              <%= pluralize(@comment.errors.count, "error") %>
              prohibited this comment from being saved:
            </h2>
          <div class='panel-body'>
            <ul>
              <% @comment.errors.full.messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
  <% end %>
  
<div class='form-group'>
  <div class='control-label col-md-2'>
  <%= f.label :body, "New Comment" %>
  </div>
  <div class='col-md-10'>
    <%= f.text_area :body, rows: 10, class:'form-control',placeholder: 'Your commnent' %>
  </div>
</div>
<div class='form-group'>
  <div class='col-md-offset-2 col-md-10'>
    <%= f.submit "Add Comment", class: "btn btn-primary btn-lg pull-right" %>
  </div>
</div>
<% end %>
</div>

<div class='col-md-12'>
  <header>
  <h2> Commnents </h2>
  <div class='col-md-10'>
    <% if @article.comments.any? %>
      <% persisted_comments(@comments).each do |comment| %>
        <div class='comment-body'>
          <%= comment.body %>
        </div>
        <div class='comment-time'>
          <%= time_ago_in_words(comment.created_at) %>
          ago by <%= comment.user.email %>
        </div>
        <hr>
        <% end %>
    <% else %>
        There are no comments to show
    <% end %>
    </div>
